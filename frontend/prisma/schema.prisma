// prisma/schema.prisma
// Define your database models

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
  ONBOARDING
  LEAVE
}

enum FinancialRecordType {
  INCOME
  EXPENSE
}

enum AiInsightScope {
  EMPLOYEE
  FINANCIAL_RECORD
  CASHFLOW
  FORECAST
  ORGANIZATION
}

model Employee {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name       String
  email      String   @unique
  department String
  position   String
  hireDate   DateTime
  isActive   Boolean  @default(true)

  financialRecords FinancialRecord[]

  insights AiInsight[] @relation("EmployeeInsights")

  @@index([department])
  @@index([email])
}

model FinancialRecord {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type        FinancialRecordType
  category    String
  amount      Decimal             @db.Decimal(14, 2)
  currency    String
  date        DateTime
  description String?

  employeeId String?
  employee   Employee? @relation(fields: [employeeId], references: [id])

  insights AiInsight[] @relation("FinancialRecordInsights")

  @@index([type])
  @@index([date])
  @@index([employeeId])
}

model AiInsight {
  id         String         @id @default(cuid())
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  scope      AiInsightScope
  key        String
  summary    String?
  payload    Json
  model      String?
  promptHash String?
  expiresAt  DateTime?

  employeeId String?
  employee   Employee? @relation("EmployeeInsights", fields: [employeeId], references: [id])

  financialRecordId String?
  financialRecord   FinancialRecord? @relation("FinancialRecordInsights", fields: [financialRecordId], references: [id])

  @@unique([scope, key])
  @@index([employeeId])
  @@index([financialRecordId])
}
